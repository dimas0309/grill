<% layout('layouts/template') %>

<div class="d-flex justify-content-center">
   <div class="p-4">
       <a href="/menu/create" 
          class="btn" id="dishlink"> 
          Add Category 
       </a>
   </div>
   <div class="p-4">
       <h2 id="menuHead">   
          Menu
       </h2>  
   </div>
</div>

<div class="row row-cols-1 row-cols-md-4 g-4 mb-3 p-5">
    <% for(let category of categories) {%>
    <div class="col">
       <div class="card" style="width: 18rem;">
            <img src="https://images.unsplash.com/photo-1432139555190-58524dae6a55?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTV8fGZvb2RzfGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" class="card-img-top" alt="...">
            <div class="card-body">
                <a href="/menu/<%=category._id%>" class="btn btn-primary" >
                    <%=category.category%>
                </a>
            </div>
        </div>
    </div>             
    <% }%> 
</div>

 

  


 

